{
  "pluginAlias": "Garage",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "remoteName": {
        "title": "Name",
        "type": "string",
        "default": "Remote API",
        "format": "uri",
        "description": "The display name of remote API"
      },
      "url": {
        "title": "URL",
        "type": "string",
        "required": true,
        "default": "http://<host>:<port>/<endpoint>/",
        "format": "uri",
        "description": "The URL of remote API"
      },
      "rejectInvalidCert": {
        "title": "Reject Invalid Certificate",
        "type": "boolean",
        "default": true,
        "description": "Terminate the HTTPS connection if the Remote API presents an invalid certificate"
      },
      "apiIP": {
        "title": "Local API IP Address",
        "type": "string",
        "default": "",
        "format": "ipv4",
        "description": "Force the IP address used for the Direct Connect API - Leave blank for automatic assignment of IP address"
      },
      "apiPort": {
        "title": "Local API Port",
        "type": "integer",
        "required": true,
        "default": "8001",
        "description": "The Port of local API"
      },
      "https": {
        "title": "Enable HTTPS",
        "type": "boolean",
        "default": false
      },
      "httpsCertPath": {
        "title": "HTTPS Certificate",
        "type": "string",
        "required": true,
        "default": "/<certificate path>/<certificate>",
        "description": "Certificate for HTTPS API Service"
      },
      "httpsKeyPath": {
        "title": "HTTPS Private Key",
        "type": "string",
        "required": true,
        "default": "/<private key path>/<private key>",
        "description": "Private Key for HTTPS API Service"
      },
      "jwt": {
        "title": "Enable JSON Web Token (JWT) Secure API",
        "type": "boolean",
        "default": false
      },
      "jwtAudience": {
        "title": "JWT Audience",
        "type": "string",
        "required": true,
        "default": "https://<JWT API Application>/",
        "format": "uri",
        "description": "The JWT Audience for the remote / local API"
      },
      "jwtIssuer": {
        "title": "JWT Issuer",
        "type": "string",
        "required": true,
        "default": "https://<JWT Issuer>/",
        "format": "uri",
        "description": "The JWT Issuer for the remote / local API"
      },
      "jwtClientID": {
        "title": "JWT Client ID",
        "type": "string",
        "required": true,
        "default": "<JWT Client ID>",
        "description": "The JWT Client ID for the remote / local API"
      },
      "jwtClientSecret": {
        "title": "JWT Client Secret",
        "type": "string",
        "required": true,
        "default": "<JWT Client Secret>",
        "description": "The JWT Client Secret for the remote / local API"
      }
    }
  },
  "layout":[
  {
    "key": "RemoteAPI",
    "type": "section",
    "title": "Remote API",
    "expandable": false,
    "expanded": true,
    "items": [
      "remoteName",
      "url",
      "rejectInvalidCert"
      ]
  },
  {
    "key": "DirectConnectAPI",
    "type": "section",
    "title": "Direct Connect API",
    "expandable": true,
    "expanded": false,
    "items": [
      "apiIP",
      "apiPort"
      ]
  },
  {
    "key": "https",
    "type": "section",
    "title": "HTTPS",
    "expandable": true,
    "expanded": false,
    "items": [
      "https",
      "httpsCertPath",
      "httpsKeyPath"
      ]
  },
  {  
    "key": "jwt",
    "type": "section",
    "title": "JSON Web Token (JWT) Secure API",
    "expandable": true,
    "expanded": false,
    "items": [
      "jwt",
      "jwtAudience",
      "jwtIssuer",
      "jwtClientID",
      "jwtClientSecret"
      ]
    }
   ]
}
